/* pages/searchParcel/searchParcel.wxss */

page{
  height: 100%;
}
.container{
  padding: 0;
}
.page-body{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}
.search-bar{
  padding: 30rpx 30rpx;
  background-color: #7568bd;
}
.search-bar .scan-search{
  position: absolute;
  right: 70rpx;
  padding-left: 16rpx;
  border-left: 1rpx solid #ccc;
}
.segment-box{
  height: 100rpx;
  background: #fff;
}

.segment-box .segment{
  height: 100%;
}
.page-body .package-content{
  flex:1;
}
.package-content .package-item{
  margin: 20rpx;
  border-radius: 16rpx;
  background-color: #fff;
}
.package-content .package-item .item-header{
  padding: 22rpx 20rpx;
  font-size: 28rpx;
}
.package-content .package-item .item-header text{
  vertical-align: middle;
}
.package-content .package-item .item-content{
  border-top: 1rpx solid #ccc;
  border-bottom: 1rpx solid #ccc;
  font-size: 26rpx;
  padding: 10rpx 40rpx;
}
.package-content .package-item .item-content .content{
  display: flex;
}
.package-content .package-item .item-content .left-text{
  color: #ccc;
  margin-right: 30rpx;
}
.package-content .package-item .item-content .content-right{
  width: 76%;
}
.package-content .package-item .item-content .content-right text{
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  display: block;
  width: 100%;
}
.package-item .footer{
  padding: 18rpx 20rpx;
  text-align: end;
}
